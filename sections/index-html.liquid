<div id="custom-html-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="custom-html">
  {%- if section.settings.layout == 'container' -%}
  <div class="row">
    <div class="column">
      {%- endif -%}
      {{- section.settings.html -}}
      {%- if section.settings.layout == 'container' -%}
    </div>
  </div>
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "Custom HTML",
    "settings": [
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "container",
            "label": "Container"
          },
          {
            "value": "fullwidth",
            "label": "Fullwidth"
          }
        ],
        "default": "container"
      },
      {
        "type": "html",
        "id": "html",
        "label": "Content"
      }
    ],
    "presets": [
      {
        "name": "Custom HTML",
        "category": "Content"
      }
    ]
  }
{% endschema %}