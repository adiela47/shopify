<div id="blog-{{ section.id }}" class="page-width" data-section-id="{{ section.id }}" data-section-type="blog">
  {%- assign my_shortcode = '' -%}
  
  {%- if section.settings.layout == 'listing' -%}
    {%- assign my_shortcode = '[blog' -%}
  {%- else -%}
    {%- assign my_shortcode = '[blog-slider' -%}
  {%- endif -%}
  
  {%- assign my_shortcode = my_shortcode | append: ' title="' | append: section.settings.heading | append: '" blog="' | append: section.settings.blog | append: '" limit="' | append: section.settings.limit | append: '"]' -%}
  
  {%- include 'shortcode' load: my_shortcode -%}
</div>

{% schema %}
  {
    "name": "Blog posts",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured Posts"
      },
      {
        "type": "blog",
        "id": "blog",
        "label": "Blog"
      },
      {
        "type": "range",
        "id": "limit",
        "min": 1,
        "max": 10,
        "step": 1,
        "label": "Number of Posts",
        "default": 3
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "listing",
            "label": "Listing"
          },
          {
            "value": "slider",
            "label": "Slider"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Blog posts",
        "category": "Blog"
      }
    ]
  }
{% endschema %}